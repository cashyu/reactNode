  .signup
    width 350px
    height 250px
    border 1px solid #ccc
    position absolute
    z-index 9999
    background-color #EEEEEE
  .notes_list
    width 810px
    margin 50px auto
    border-top 1px solid #A6A0A0
    .notes_item 
      position relative
      width 810px
      border-bottom 1px solid #A6A0A0
      margin-top 10px
      padding-top 20px
      padding-bottom 20px
      h4
        font-family "Weibei TC"
        font-size 20px
      p
        font-family "Weibei TC"
        font-size 14px
      .tag
        display inline-block
        margin-top 10px
        font-family "Weibei TC"
        font-size 14px
        .tag-right
          margin-left 330px
  .navBox 
    height 40px
    line-height 40px
    background #dddddd
    .nav-content
      overflow hidden
      display flex
      li
        float left
        width 100px
        text-align center
  .article_main
    margin 50px auto
    position relative
    width 810px
    font-size 16px
    border-bottom 1px solid #A6A0A0
    margin-top 10px
    padding-top 20px
    padding-bottom 20px
    h4
      font-family "Weibei TC"
      font-size 20px
    .article-tag
      display inline-block
      margin-top 10px
      font-family "Weibei TC"
      font-size 14px
      .tag-right
        margin-left 300px
   




